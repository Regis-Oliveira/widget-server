<style>
  .container {
    flex: 1; 
    align-items: center; 
    justify-content: center; 
    background-color: #09090A; 
    height: auto;
  }

  .headerTitle {
    font-family: sans-serif; 
    text-align: center; 
    color: #8257E5; 
    padding-top: 20px
  }

  .containerContent {
    background-color: #18181B; 
    margin: 20px; 
    padding: 20px;
  }

  .containerType {
    display: flex; 
    align-items: center; 
    justify-content: flex-start; 
    flex-direction: row; 
    margin-bottom: 14px;
  }

  .containerComment {
    display: flex; 
    align-items: center; 
    justify-content: flex-start; 
    flex-direction: row;
  }

  .subtitle {
    color: #8257E5; 
    font-family: sans-serif; 
    font-weight: bold; 
    margin-right: 6px;
  }

  .text {
    font-family: sans-serif; 
    color: #fff; 
    font-size: 16px; 
    font-weight: 400; 
    align-self: center;
  }

  .containerSubtitleImage {
    background-color: #18181B; 
    margin: 0 20px; 
    padding: 20px; 
    display: flex; 
    align-items: center; 
    justify-content: flex-start; 
    flex-direction: row;
  }

  .containerImage {
    background-color: #18181B; 
    margin: 0 20px 0; 
    padding: 20px; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    flex-direction: row; 
    padding-bottom: 20px;    
  }

  .screenshotImage {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>

<div class="container">
  <div>
    <h1 class="headerTitle">Novo feedback recebido</h1>        
  </div>
  <div class="containerContent">
    <div class="containerType">
      <h3 class="subtitle">Tipo do feedback:</h3>
      <p class="text">{{type}}</p>
    </div>
    <div class="containerComment">
      <h3 class="subtitle">Coment√°rio:</h3>
      <p class="text">{{comment}}</p>        
    </div>
  </div>
  <div class="containerSubtitleImage">
    <h3 class="subtitle">Print da tela abaixo:</h3>
  </div>
  <div class="containerImage">
    <div style="border: 1px solid blueviolet; width: 900px; height: 900px;">
      <img 
        class="screenshotImage" 
        src="{{screenshot}}" 
        alt="It's a screenshot from feedback of type {{type}}" 
      />
    </div>
  </div>
</div>        
